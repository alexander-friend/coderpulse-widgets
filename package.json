{
  "name": "coderpulse-widgets",
  "version": "1.1.0",
  "description": "A collection of open source widgets for use in blogs, websites and other tools",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.embed.config.ts && vite build --config vite.demo.config.ts && cp dist/coderpulse-widgets-embed.umd.js wordpress/assets/coderpulse-widgets-embed.umd.js",
    "build:demo": "vite build --config vite.demo.config.ts",
    "dev:embed": "npm run build && vite preview",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,css,html,json}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish --provenance --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexander-friend/coderpulse-widgets.git"
  },
  "keywords": [
    "web-components",
    "lit",
    "widgets",
    "wordpress",
    "cron",
    "cron-builder",
    "star-rating"
  ],
  "author": "CoderPulse <alexander@coderpulse.io>",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/alexander-friend/coderpulse-widgets/issues"
  },
  "homepage": "https://github.com/alexander-friend/coderpulse-widgets#readme",
  "dependencies": {
    "@types/marked": "^5.0.2",
    "cron-parser": "^5.4.0",
    "cronstrue": "^3.9.0",
    "highlight.js": "^11.11.1",
    "lit": "^3.1.2",
    "marked": "^17.0.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@lit/localize-tools": "^0.8.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  }
}
